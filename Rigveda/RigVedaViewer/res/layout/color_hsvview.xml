<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:contentDescription="@string/color_hsvview.xml"
    android:minHeight="400dip"
    android:minWidth="400dip"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:padding="10dip" >

        <de.devmil.common.ui.color.HsvAlphaSelectorView
            android:id="@+id/color_hsv_alpha"
            android:layout_width="30dip"
            android:layout_height="fill_parent"
            android:layout_weight="0" >
        </de.devmil.common.ui.color.HsvAlphaSelectorView>

        <de.devmil.common.ui.color.HsvColorValueView
            android:id="@+id/color_hsv_value"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="5dip"
            android:layout_weight="1" >
        </de.devmil.common.ui.color.HsvColorValueView>

        <de.devmil.common.ui.color.HsvHueSelectorView
            android:id="@+id/color_hsv_hue"
            android:layout_width="30dip"
            android:layout_height="fill_parent"
            android:layout_weight="0" >
        </de.devmil.common.ui.color.HsvHueSelectorView>
    </LinearLayout>

</LinearLayout>